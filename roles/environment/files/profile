profile_dir="${XDG_CONFIG_HOME:-${HOME}/.config}/profile.d/"
for file in "${profile_dir}"/*.sh; do
    if [ -f "${file}" ]; then
        # shellcheck disable=SC1090
        . "${file}"
    fi
done
unset profile_dir
