[alias]
	a = add
	b = branch
	c = commit
	co = checkout
	cp = cherry-pick
	d = diff
	ds = diff --staged
	e = commit --amend --no-edit
	l = log --pretty=oneline-short
	la = log --pretty=fuller
	lf = log --pretty=fixes --abbrev=12
	lg = log --pretty=oneline-short --graph
	pl = pull
	ps = push
	rb = rebase
	rs = reset
	s = status --short --branch
[color]
	ui = auto
[core]
	excludesfile = ~/.config/git/ignore
[diff]
	algorithm = histogram
	indentHeuristic = true
[diff "ansible-vault"]
	textconv = ansible-vault view
	cachetextconv = false
[merge]
	conflictstyle = diff3
[pretty]
	fixes = Fixes: %h (\"%s\")
	oneline-short = format:%C(blue)%h%d %C(reset)%s %C(white dim)(%cr, %an)
[pull]
	rebase = true
[user]
	name = Emil Lundmark
	email = emil@lndmrk.se

[include]
	path = ~/.config/git/private
